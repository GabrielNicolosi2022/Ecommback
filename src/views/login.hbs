<h1 class='mb-3'>{{view}}</h1>

{{#if message}}
  <div class='alert alert-danger' role='alert'>
    {{message}}
  </div>
{{/if}}

<div class='row'>
  <div class='container'>
    <div class='col-6'>
      <form action='/api/sessions/login' method='post'>
        <input
          class='form-control mb-3'
          type='email'
          name='email'
          id='email'
          placeholder='Correo'
        />
        <input
          class='form-control mb-3'
          type='password'
          name='password'
          id='password'
          placeholder='Contraseña'
        />
        <button class='btn btn-outline-primary' type='submit'>Login</button>
      </form>
      {{! GitHub login }}
      <div>
        <a href='/api/sessions/github'><button
            class='btn btn-outline-primary mb-3'
            type='submit'
          >Login con GitHub</button></a>
      </div>

      <div>
        ¿Aún no estás registrado?
        <a href='http://localhost:8080/register'>Regístrate</a>
      </div>
    </div>
  </div>
</div>
<h1 class="mb-3">{{view}}</h1>
<div class='row'>
  <div class='container'>
    <div class='col-6'>
      <form class="" action='/api/sessions/login' method='post'>
        <input class="form-control mb-3" type='email' name='email' id='email' placeholder='Correo' />
        <input class="form-control mb-3"
          type='password'
          name='password'
          id='password'
          placeholder='Contraseña'
        />
        <button class="btn btn-outline-primary" type='submit'>Login</button>
      </form>
      <div>
        <a href='http://localhost:8080/register'>Regístrate</a>
      </div>
    </div>
  </div>
</div>